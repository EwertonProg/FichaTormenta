<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_nome_magia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Campo de Força Menor"
                android:textColor="@color/primaria"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/imgbtn_selecionar_magia"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            <TextView
                android:id="@+id/tv_nivel_magia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:maxLines="4"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Nível: 2"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_nome_magia"/>
            <TextView
                android:id="@+id/tv_tipo_magia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:scrollbars="vertical"
                android:text="Arcana"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_nivel_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_nome_magia"/>

            <TextView
                android:id="@+id/tv_descritores_magia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:scrollbars="vertical"
                android:text="Abjuração, Essência"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_tipo_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_nome_magia"/>

            <TextView
                android:id="@+id/tv_tempo_execucao_magia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Tempo de Execução: Ação Livre"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_descritores_magia"/>
            <TextView
                android:id="@+id/tv_alcance_magia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:scrollbars="horizontal"
                android:text="Alcance: Pessoal"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_tempo_execucao_magia"/>
            <TextView
                android:id="@+id/tv_alvo_magia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:scrollbars="vertical"
                android:text="Alvo: Você"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tv_alcance_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_tempo_execucao_magia"/>
            <TextView
                android:id="@+id/tv_efeito_magia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Efeito: Nenhum"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_alvo_magia"/>
            <TextView
                android:id="@+id/tv_duracao_magia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxLines="2"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Duração: Permanente ou ate ser descarregada"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_efeito_magia"/>
            <TextView
                android:id="@+id/tv_resistencia_magia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxLines="4"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Teste de Resistencia: Nenhum"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_duracao_magia"/>
            <TextView
                android:id="@+id/tv_area_magia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxLines="4"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Area: Emanação com 6m de raio"
                android:textColor="@color/primaria"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@id/tv_descricao_magia"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_resistencia_magia"/>

            <ImageButton
                android:id="@+id/imgbtn_selecionar_magia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/botao_icone_arredondado"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/done_icon"
                app:layout_constraintBottom_toBottomOf="@id/tv_nome_magia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_nome_magia"
                />

            <TextView
                android:id="@+id/tv_descricao_magia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:maxHeight="180dp"
                android:scrollbars="vertical"
                android:text="Benefício: sua margem de ameaça com a arma escolhida é dobrada. Este efeito não se acumula com qualquer outro que dobre a margem de ameaça, e é sempre o primeiro a ser aplicado."
                android:textColor="@color/primaria"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_nome_magia"
                app:layout_constraintTop_toBottomOf="@id/tv_area_magia"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>